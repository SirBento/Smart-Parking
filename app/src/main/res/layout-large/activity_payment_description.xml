<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/login"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="75dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:text="What You Are Going To Pay"
            android:textColor="@color/yello"
            android:textSize="25dp"
            android:textStyle="italic">

        </TextView>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:src="@drawable/payforparking" />


    </RelativeLayout>



    <RelativeLayout

        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/nameofpayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Name"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="serif"
            android:textSize="17dp"

           />

        <TextView
            android:id="@+id/econumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:padding="5dp"
            android:text="Ecocash Number"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="serif"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/minutesOfParking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:padding="5dp"
            android:text="Parking Time In Minutes"
            android:textColor="@android:color/darker_gray"
            android:textSize="17dp"
            android:fontFamily="serif"
            />

        <TextView
            android:id="@+id/amountToBePaid"
            android:layout_marginTop="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount to be paid"
            android:padding="5dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="17dp"
            android:fontFamily="serif"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btnPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button"
        android:text="Make Payment"
        android:textColor="@color/yello"
        android:textSize="25sp"
        android:textStyle="italic"
        android:fontFamily="serif"/>

    <Button
        android:id="@+id/btncancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button"
        android:text="Cancel"
        android:textColor="@color/yello"
        android:textSize="25sp"
        android:fontFamily="serif"
        android:textStyle="italic" />


</LinearLayout>