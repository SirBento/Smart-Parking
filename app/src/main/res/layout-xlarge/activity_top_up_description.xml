<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopUpDescription"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/login">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="What You Are Going To Pay"
            android:textColor="@color/yello"
            android:textSize="70sp"
            android:textStyle="italic">

        </TextView>


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:src="@drawable/payforparking" />


    </RelativeLayout>



    <RelativeLayout

        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/TopUpNameOfPayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="10dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/TopUpEcoNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Ecocash Number"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/TopUpMinutesOfParking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="10dp"
            android:text="Parking Time In Minutes"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/TopUpAmountToBePaid"
            android:layout_marginTop="210dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount to be paid"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="40sp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btnTopUpPayment"
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button"
        android:text="Make Payment"
        android:textColor="@color/yello"
        android:textStyle="italic"
        android:textSize="45sp"
        android:gravity="center"
        android:fontFamily="serif"
        android:minHeight="100dp"/>

    <Button
        android:id="@+id/btTopUpncancel"
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button"
        android:text="Cancel"
        android:textColor="@color/yello"
        android:textStyle="italic"
        android:textSize="45sp"
        android:gravity="center"
        android:fontFamily="serif"
        android:minHeight="100dp" />


</LinearLayout>